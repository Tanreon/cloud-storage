<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="center" prefHeight="549.0" prefWidth="930.0" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.geekbrains.cloud_storage.Controller.MainController">
    <GridPane VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints maxWidth="5.0" minWidth="5.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
        </rowConstraints>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <padding>
                <Insets left="5.0" />
            </padding>
            <TableView fx:id="clientStorageTableView" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="clientStorageFileNameColumn" editable="false" minWidth="100.0" prefWidth="-1.0" text="Название" />
                    <TableColumn fx:id="clientStorageFileCreatedAtColumn" editable="false" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" text="Дата создания" />
                    <TableColumn fx:id="clientStorageFileSizeColumn" editable="false" maxWidth="150.0" minWidth="60.0" prefWidth="60.0" text="Размер" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <padding>
                <Insets right="5.0" />
            </padding>
            <TableView fx:id="serverStorageTableView" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="serverStorageFileNameColumn" editable="false" minWidth="100.0" prefWidth="-1.0" text="Название" />
                    <TableColumn fx:id="serverStorageFileCreatedAtColumn" editable="false" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" text="Дата создания" />
                    <TableColumn fx:id="serverStorageFileSizeColumn" editable="false" maxWidth="150.0" minWidth="60.0" prefWidth="60.0" text="Размер" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Локальное хранилище" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Хранилище на сервере" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="5.0" />
            </GridPane.margin>
            <Label text="Статус соединения:">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            </Label>
            <Label fx:id="connectionStatusLabel" text="не подключен" />
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" visible="false" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="5.0" />
            </GridPane.margin>
            <ProgressBar prefWidth="200.0" progress="0.0" />
            <Label text="Файл:">
                <HBox.margin>
                    <Insets left="5.0" right="5.0" />
                </HBox.margin>
            </Label>
            <Label text="filename.txt" />
        </HBox>
    </GridPane>
</VBox>
